# Twitch Bot Configuration
TWITCH_BOT_USERNAME=your_bot_username
TWITCH_CHANNEL=channel_name_to_monitor

# Twitch OAuth Configuration (Choose one method)
# Method 1: Automatic OAuth (Recommended)
TWITCH_CLIENT_ID=your_client_id
TWITCH_CLIENT_SECRET=your_client_secret

# Method 2: Manual OAuth Token (Alternative)
# TWITCH_OAUTH_TOKEN=oauth:your_oauth_token

# Server Configuration
PORT=3000
RATING_UPDATE_INTERVAL=5000
RATING_HISTORY_SIZE=100

# Development
NODE_ENV=development 